<%= link_to 'Sign In', new_user_session_path %>
  <% @users.each do |user| %>
    <div class="user_info">
      <div class="img">
        <%= image_tag user.photo, alt: "User Photo", class: "user-photo" if user.photo %>
      </div>
      <div class="user">
        <h2>:bust_in_silhouette:<%= link_to user.name, user_path(user) %></h2>
        <p><strong>Number of Posts::memo:</strong> <%= user.posts.count %></p>
      </div>
    </div>
  <% end %>
</div>
